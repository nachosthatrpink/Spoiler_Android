<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spoiler.spoilerandroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="sensor" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Logger"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:label="@string/title_activity_logger"
            android:screenOrientation="sensor" >
        </activity>
        <activity
            android:name=".Settings"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:label="@string/title_activity_settings"
            android:screenOrientation="sensor" >
        </activity>
        <activity
            android:name=".LogStore"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:label="@string/title_activity_log_store"
            android:screenOrientation="sensor" >
        </activity>
        <activity
            android:name=".LogView"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:label="LogView"
            android:screenOrientation="sensor" >
        </activity>
        <activity
            android:name=".LogGraph"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:label="LogGraph"
            android:screenOrientation="sensor" >
        </activity>
    </application>

</manifest>
